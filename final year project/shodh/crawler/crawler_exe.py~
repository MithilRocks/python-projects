import crawler_prog
import sqlite3
con=sqlite3.connect('search.db')
con.execute("delete from searchengine_url_list")
con.commit()
con.execute("vacuum")
con.commit()
con.execute("delete from searchengine_word_list")
con.commit()
con.execute("vacuum")
con.commit()
con.execute("delete from searchengine_link")
con.commit()
con.execute("vacuum")
con.commit()
con.execute("delete from words")
con.commit()
con.execute("vacuum")
con.commit()
con.close()
pagelist=['/home/mithil/Desktop/BEPROJECT/websites_collection/second.html']
crawler=crawler_prog.crawler('search.db')
crawler.crawl(pagelist)
crawler.word_page()
